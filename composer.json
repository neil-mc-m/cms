{
  "name": "studentneil/semester 2 project-LightCMS",
  "description": "A lightweight CMS for my end final project",
  "require": {
    "silex/silex": "~1.3",
    "silex/web-profiler": "~2.0",
    "twig/twig":"~1.22"
  },
  "autoload":{
    "psr-4":{
      "LightCMS\\": "src/",
      "LightCMStests\\": "tests/"
    }
  },
  "scripts":{
    "phpunit": "php phpunit.phar --log-tap tests/log/phpunit.log",
    "phpdoc": "php phpDocumentor.phar -d ./src"
  }
}