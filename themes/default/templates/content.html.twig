{# the main content block. Included for all pages #}
{% if content is defined %}

    {% for con in content %}
       
        <article class="main-section">
            <img src="{{ app.request.basepath }}{{ con.imagePath|raw }}">
            <h2>{{ con.contentItemTitle }}</h2>
            
            <p>
                {{ con.contentItem|slice(0,100) }}...<a class="readmore-link" href="/{% for page in app.pages %}{% if page.pageName == con.pageName %}{{ page.pageRoute }}{% endif %}{% endfor %}/{{ con.contentId }}">read more</a>
            </p>
            <p>
                {{ con.created }}
                <img class="cal-icon" src="{{ app.request.basepath }}/images/calendar.svg" alt="calender pic"/>
            </p>
            <div class="comment-box">
                <p>
                    comments:
                </p>
            </div>
        </article>
    
    {% endfor %}
    
    <article class="side-section">
            
               
            
        </article>
{% endif %}
