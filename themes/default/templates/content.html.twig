{# the main content block. Included for all pages #}
{% if content is defined %}

    {% for con in content %}
       
        <article class="section">
            <img src="{{ app.request.basepath }}{{ con.imagePath|raw }}">
            <a href="/{% for page in app.pages %}{% if page.pageName == con.pageName %}{{ page.pageRoute }}{% endif %}{% endfor %}/{{ con.contentId }}">{{ con.contentItemTitle }}</a>
            <p>
                {{ con.contentItem|slice(0,100) }}...<a href="/{% for page in app.pages %}{% if page.pageName == con.pageName %}{{ page.pageRoute }}{% endif %}{% endfor %}/{{ con.contentId }}">read more</a>
            </p>
            <p>
                {{ con.created }}
                <img class="cal-icon" src="{{ app.request.basepath }}/images/calendar.svg" alt="calender pic"/>
            </p>
            <div class="comment-box">
                <p>
                    comments:
                </p>
            </div>
        </article>
    
    {% endfor %}
    {% for con in content %}
    <article class="section">
            
                <a href="/{% for page in app.pages %}{% if page.pageName == con.pageName %}{{ page.pageRoute }}{% endif %}{% endfor %}/{{ con.contentId }}">{{ con.contentItemTitle }}</a>
            {% endfor %}
        </article>
{% endif %}
