{# base template from which all other templates will extend #}
{% set active_page = active_page|default ('home') %}


<!DOCTYPE html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        Light CMS |{% block title %}{% endblock %}
    </title>
    <style>
        {% block style %}
        @import url(https://fonts.googleapis.com/css?family=Raleway);
        @import '{{ app.request.basepath }}/css/user_default_theme.css';
        {% endblock %}
    </style>

</head>
<body>


    <header class="header">
        <div class="header-box">
            {% block header %}

                <h1 class="title">Your title here...</h1>
            {% endblock %}
        </div>
    </header>


    <div class="navbar">
        <nav>
            <ul>
                {% block navbar %}
                {% include 'navbar.html.twig' %}
                {% endblock %}
            </ul>
        </nav>
  </div>


    {# a subheading div #}
    <div class="page-subheading">
        {% block subheading %}{% endblock %}
    </div>


    {# main content area #}
    <div class="content">
        <div class="container">
            {% block content %}{% endblock %}
        </div>
    </div>


{# a space for a link to go backwards in the navigation tree #}
<div class="back-link">
    {% block back_link %}{% endblock %}
</div>

{# the footer #}
<footer class="footer">
    <div class="footer-section">
        &copy; Light CMS<br>
        {# the twig now function gives the current time with a filter for the current date (taken from the twig docs) #}
        <img class="cal-icon" src="{{ app.request.basepath }}images/calendar.svg" alt="calender pic"/>

        {{ "now"|date(timezone="Europe/Dublin") }}
    </div>
    <div class="footer-section">

        <ul class="footer-links">
            <h4>Quicklinks</h4>
            {% include 'footerNav.html.twig' %}
        </ul>
    </div>

</footer>

{# javascript functions #}
{# the javscript functions will not be available on every page #}
{# so when they're needed, include them in a block in a template #}
{% block javascript %}
<script type='text/javascript' id="__bs_script__">//<![CDATA[
document.write("<script async src='http://HOST:3000/browser-sync/browser-sync-client.2.11.1.js'><\/script>".replace("HOST", location.hostname));
//]]></script>

{% endblock %}

</body>
</html>
