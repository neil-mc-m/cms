{# base template from which all other templates will extend #}



<!DOCTYPE html>
<head>
    <title>
        Light CMS |{% block title %}{% endblock %}
    </title>
    <style>
        {% block style %}
        @import url(https://fonts.googleapis.com/css?family=Raleway);
        @import '{{ app.request.basepath }}/css/default_theme.css';
        {% endblock %}
    </style>

</head>
<body>


    <header class="header">
        <div class="header-box">
            {% block header %}
                <img src="{{ app.request.basepath }}/images/cms_logo.jpg" alt="a possible logo" />
                <h1>Your title here...</h1>
            {% endblock %}
        </div>
    </header>


    <div class="navbar">
        <nav>
            <ul>
                {% block navbar %}
                {% endblock %}
            </ul>
        </nav>
  </div>


    {# a subheading div #}
    <div class="page-subheading">
        {% block subheading %}{% endblock %}
    </div>


    {# main content area #}
    <div class="content">
        <div class="container">
            {% block content %}{% endblock %}
        </div>
    </div>


{# a space for a link to go backwards in the navigation tree #}
<div class="back-link">
    {% block back_link %}{% endblock %}
</div>

{# the footer #}
<footer class="footer">
    &copy; Light CMS<br>
    {# the twig now function gives the current time with a filter for the current date (taken from the twig docs) #}
    {{ "now"|date(timezone="Europe/Dublin") }}</footer>

{# javascript functions #}
{# the javscript functions will not be available on every page #}
{# so when they're needed, include them in a block in a template #}
{% block javascript %}
    <script type='text/javascript' id="__bs_script__">//<![CDATA[
        document.write("<script async src='http://HOST:3000/browser-sync/browser-sync-client.2.11.1.js'><\/script>".replace("HOST", location.hostname));
        //]]></script>
{% endblock %}

</body>
</html>
