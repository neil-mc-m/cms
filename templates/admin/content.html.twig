{% extends 'admin/_base.html.twig' %}
{% block title %}
    Admin Content
{% endblock %}
{% block content %}
    <div class="main-section">
        <h3>Current Pages with Content</h3>
        <p>
            {% for page in pages %}
                <h4>{{ page.pageName }}</h4>
                {% for content in content %}
                    {% if page.pageName == content.pageName %}
                        <p><strong>{{ content.contentItemTitle }}</strong></p>
                        <p>{{content.contentItem }}</p>
                        <p>{{ content.created }}</p>
                        <p>{{ content.contentId }}</p>
                        <a href="{{ app.request.basepath }}/admin/process-delete-content/{{ content.contentId }}" onclick="return confirm('Sure you want to delete this post?');">Delete?</a>
                        <a href="/admin/edit-content/{{ content.contentId }}">Edit?</a>
                        <a href="/admin/view-single-content/{{ content.contentId }}">View?</a>
                    {% endif %}
                {% endfor %}
            {% endfor %}
        </p>
        <p>
            {% if result is defined %}
                {{ result }}
            {% endif %}
        </p>
    </div>
{% endblock %}