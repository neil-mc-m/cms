{% extends '_base.html.twig' %}
{% set pagesSubNav = [['create-page', 'Create a new web-page'], ['view-pages', 'View current pages'], ['delete-page', 'Remove a page']] %}
{# set the active page to be styled. Do this on every different page #}
{% set active_page = 'pages' %}

{% block title %}
Admin delete form
{% endblock %}






{% block content %}

    
        <h3>Current Pages</h3>
        <form class="deletePageForm" action="/admin/process-delete-page" method="post">
            {% for page in pages %}
            <input type="radio" name="pageName" value="{{ page.pageName }}" checked>{{ page.pageName }}<br>
            <input type="hidden" name="pageTemplate" value="{{ page.pageTemplate }}"/><br>
            {% endfor %}
            <input type="submit" value="delete" onclick="return confirm('Sure you want to delete this page?');">
        </form>


        <p>
            {% if result is defined %}
            {{ result }}
            {% endif %}
        </p>
    


{% endblock %}
