{% extends 'admin/_base.html.twig' %}
{% set pagesSubNav = [['create-page', 'Create a new web-page'], ['view-pages', 'View current pages'], ['delete-page', 'Remove a page']] %}
{# set the active page to be styled. Do this on every different page #}
{% set active_page = "pages" %}

{% block title %}
Admin Pages
{% endblock %}









{% block content %}

    <h3>Current Pages</h3>
        {% for page in pages %}
        <div class="page-preview-box">
            <h4>{{ page.pagename }}</h4>
                {% for content in allcontent %}
                    {% if page.pagename == content.pagename %}
                        <p>{{ content.contentitemtitle }}</p>

                    {% endif %}

                {% endfor %}


                <ul>
                    <li><a class="admin-button" href="/{{ page.pagename|lower }}" target="_blank"><span class="button">Preview</span></a></li>
                </ul>


                </div>
        {% endfor %}
        <p>
            {% if result is defined %}
            {{ result }}
            {% endif %}
        </p>

{% endblock %}
{% block iframe %}


{% endblock %}
{% block javascript %}


{% endblock %}
