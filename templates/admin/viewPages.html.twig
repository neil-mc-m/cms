{% extends 'admin/admin_base.html.twig' %}
{% set pagesSubNav = [['dashboard', 'Dashboard'], ['create-page', 'Create a new web-page'], ['view-pages', 'View current pages'], ['delete-page', 'Remove a page']] %}
{# set the active page to be styled. Do this on every different page #}
{% set active_page = "view-pages" %}

{% block title %}
Admin Pages
{% endblock %}



{% block navbar %}
    <a href="{{ path('admin_logout') }}">Logout</a>
    <p>
        Welcome home,{{ user['username'] }}
        {{ id }}
    </p>
{% endblock %}

{% block settings_nav %}
    <div class="menu-sidebar">
        {% include 'admin/admin_pagesSubNav.html.twig' %}
    </div>
{% endblock %}

{% block content %}
<div class="main-section">
    <h3>Current Pages</h3>
        {% for page in pages %}
        <div class="page-preview-box">
            <h4>{{ page.pagename }}</h4>
                {% for content in allcontent %}
                    {% if page.pagename == content.pagename %}
                        <p>{{ content.contentitemtitle }}</p>

                    {% endif %}

                {% endfor %}


                <ul>
                    <li><a class="admin-button" href="/{{ page.pagepath }}" target="_blank"><span class="button">Preview</span></a></li>
                </ul>


                </div>
        {% endfor %}
        <p>
            {% if result is defined %}
            {{ result }}
            {% endif %}
        </p>

{% endblock %}
{% block iframe %}


{% endblock %}
{% block javascript %}


{% endblock %}
