{% extends '_base.html.twig' %}
{% set active_page = 'content' %}
{% block title %}
    Admin Content
{% endblock %}
{% block content %}
    
        <h2 class="cust-h">Current Pages with Content</h2>
        
            {% for page in app.pages %}
                
                <h3>Page Name :{{ page.pageName }}</h3>
                
                {% for content in content %}
                    {% if page.pageName == content.pageName %}
                        <div class="sm-container">
                        <p>Article Name : {{ content.contentItemTitle }}</p>
                        <p>{{content.contentItem }}</p>
                        <p>{{ content.created }}</p>
                        <p>{{ content.contentId }}</p>
                        <a class="logout" href="{{ app.request.basepath }}/admin/process-delete-content/{{ content.contentId }}" onclick="return confirm('Sure you want to delete this post?');">Delete</a>
                        <a class="logout" href="/admin/edit-content/{{ content.contentId }}">Edit</a>
                        <a class="logout" href="/admin/view-single-content/{{ content.contentId }}">View</a>
                        </div>
                    {% endif %}
                    
                {% endfor %}
            {% endfor %}
        
            
{% endblock %}