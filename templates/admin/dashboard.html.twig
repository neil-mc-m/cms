{% extends 'admin/admin_base.html.twig' %}
{% set active_page="dashboard" %}

{% block title %}
Admin dashboard
{% endblock %}



{% block navbar %}
{{ parent() }}
    <a href="{{ path('admin_logout') }}">Logout</a>
    <p>
        Welcome home,{{ user.username }}
        {{ id }}
    </p>
{% endblock %}

{% block content %}

    <div class="main-section">
        <h3>Welcome to the administrators dashboard. Here you can create new web-pages, edit your pages content and more..</h3>
        <p>
            Below, is a list of current pages.
        </p>
        <p>
            Use the navigation bar to the left to move through the sections. You can always get back to this screen by clicking the dashboard link.
        </p>
        <h3>Current Pages</h3>
        <p>
            {% for page in pages %}
            {{ page.pagename }}
            {% endfor %}
        </p>

        <p>
            {% if result is defined %}
            {{ result }}
            {% endif %}
        </p>
    </div>




{% endblock %}
